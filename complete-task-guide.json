{
  "project_overview": {
    "name": "UI/UX Auto-Design Generator",
    "description": "Upload an e-commerce PDF/DOCX brief, let Groq/Gemini analyze the content, duplicate a live Figma file, and instantly draw production-ready screens through a Figma plugin.",
    "tech_stack": ["FastAPI", "Groq LLM", "Figma API", "PyPDF2", "Python-docx"]
  },
  
  "sample_pdf_content": {
    "ecommerce": {
      "title": "E-commerce Mobile App Design Brief",
      "content": "Create a modern shopping application with product catalog, shopping cart, user authentication, payment integration, and order tracking. Include features like product search, filters, wishlist, reviews, and recommendations."
    },
    "healthcare": {
      "title": "Healthcare Management System",
      "content": "Design a patient portal application with appointment scheduling, medical records access, prescription management, doctor consultation, health tracking, and emergency contact features."
    },
    "fintech": {
      "title": "Financial Management Platform", 
      "content": "Build a banking application with account management, transaction history, money transfers, investment tracking, budget planning, and financial analytics dashboard."
    },
    "education": {
      "title": "Learning Management System",
      "content": "Create an educational platform with course enrollment, assignment submission, grade tracking, video lectures, discussion forums, and progress monitoring."
    },
    "food": {
      "title": "Food Delivery Application",
      "content": "Design a restaurant delivery app with menu browsing, order placement, real-time tracking, payment processing, reviews, and loyalty programs."
    }
  },

