  "workflow_steps": [
    {
      "step": 1,
      "action": "Upload PDF",
      "description": "User uploads PDF containing design requirements"
    },
    {
      "step": 2,
      "action": "Extract Text",
      "description": "System extracts text from PDF using PyPDF2"
    },
    {
      "step": 3,
      "action": "Detect Domain",
      "description": "Analyze keywords to determine app type (ecommerce, healthcare, etc.)"
    },
    {
      "step": 4,
      "action": "Generate Prompt",
      "description": "Create domain-specific prompt with appropriate colors and content"
    },
    {
      "step": 5,
      "action": "Call LLM",
      "description": "Send prompt to Groq LLM and get JSON response"
    },
    {
      "step": 6,
      "action": "Create Figma File",
      "description": "Duplicate template Figma file using REST API"
    },
    {
      "step": 7,
      "action": "Return Response",
      "description": "Send JSON report and Figma URL to client"
    }
  ]
