  "api_endpoints": {
    "upload": {
      "path": "/upload",
      "method": "POST",
      "description": "Upload PDF and generate UI design JSON",
      "parameters": {
        "file": {
          "type": "multipart/form-data",
          "required": true,
          "description": "PDF file containing design requirements"
        }
      },
      "responses": {
        "200": {
          "description": "Successful generation",
          "example": "See expected_json_outputs section"
        },
        "429": {
          "description": "Rate limit exceeded",
          "example": {
            "error": "Rate limit exceeded",
            "retry_after": 60
          }
        },
        "400": {
          "description": "Invalid file format",
          "example": {
            "error": "Unable to extract text from PDF"
          }
        }
      }
    }
  },

